<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/selected_videos_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingEnd="@dimen/selected_movies_icon_margin"
                android:paddingStart="@dimen/selected_movies_icon_margin">

    <ImageView
        android:id="@+id/movie_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/selected_movies_image_content_description"
        android:padding="@dimen/icon_movies_padding"
        android:src="@drawable/ic_download_movies"/>

    <TextView
        android:id="@+id/actionbar_notification_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/movie_image_view"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_text_view_drawable"
        android:gravity="center"
        android:textColor="@color/item_movie_card_background"
        tools:text="99"/>

</RelativeLayout>