<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/black"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_height"
        app:srcCompat="@drawable/ic_profile_empty"/>

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_height"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="@dimen/paddingItemDecorationEdge"
        android:gravity="center"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/movie_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_half"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="@string/movies_button_str"/>

    <Button
        android:id="@+id/account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/paddingItemDecorationDefault"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_google"
        android:paddingStart="@dimen/paddingItemDecorationDefault"
        android:textColor="@android:color/white"
        android:text="@string/account_button_str"/>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:visibility="visible"
        tools:visibility="gone"/>
</LinearLayout>