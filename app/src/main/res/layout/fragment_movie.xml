<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/black"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/poster_single_imageView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/single_poster_height"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_margin_quarter"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:srcCompat="@android:color/transparent"/>

            <TextView
                android:id="@+id/single_movie_title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_quarter"
                android:textColor="@color/background"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/single_movie_year_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_margin_quarter"
                    android:textColor="@color/background"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/single_movie_genres_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="@dimen/activity_margin_quarter"
                    android:textColor="@color/background"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/single_movie_overview_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_quarter"
                android:textColor="@color/background"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>