<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="@dimen/poster_grid_height"
             android:layout_margin="@dimen/activity_margin_quarter"
             android:orientation="vertical"
             >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin_quarter">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_img_heig"
            android:onClick="onItemClick"/>

        <ProgressBar
            android:id="@+id/movie_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/movie_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_content"
            android:layout_marginStart="@dimen/activity_margin_content"
            android:layout_marginTop="@dimen/activity_margin_quarter"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Movie Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_rating"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_quarter"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="@dimen/activity_margin_half"
                android:textColor="@android:color/black"
                tools:text="Nowadays, user engagement is considered one of the most important metrics for the success of your app"/>

            <TextView
                android:id="@+id/movie_year"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_quarter"
                android:layout_weight="1"
                android:alpha="0.38"
                android:gravity="end"
                android:maxLines="1"
                android:paddingEnd="@dimen/activity_margin_half"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                tools:text="2009 | EN"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>